<h1>edit-user</h1>
<form action="/update-user" method="post">
  <input
    value="<%= data.user.username %>"
    type="hidden"
    class="form-control"
    id="pwd"
    placeholder="Enter password"
    name="username"
  />
  <div class="mb-3">
    <label for="password" class="form-label">mật khẩu:</label>
    <input
      value="<%= data.user.password %>"
      type="password"
      class="form-control"
      id="pwd"
      placeholder="Enter password"
      name="password"
    />
  </div>
  <div class="mb-3">
    <label for="fullname" class="form-label">fullname:</label>
    <input
      value="<%= data.user.fullname %>"
      type="text"
      class="form-control"
      id="pwd"
      placeholder="Enter fullname"
      name="fullname"
    />
  </div>

  <div class="mb-3 mt-3">
    <label for="address" class="form-label">Đia chi:</label>
    <input
      value="<%= data.user.address %>"
      type="text"
      class="form-control"
      id="address"
      placeholder="Enter address"
      name="address"
    />
  </div>
  <div class="mb-3 mt-3">
    <label for="email" class="form-label">email:</label>
    <input
      value="<%= data.user.email %>"
      type="email"
      class="form-control"
      id="email"
      placeholder="Enter username"
      name="email"
    />
  </div>
  <div class="mb-3 mt-3">
    <label for="Quyen" class="form-label">Quyen:</label>
    <select
      name="groupid"
      class="form-select"
      aria-label="Default select example"
    >
        <option value="1" <%= data.user.groupid == 1 ? 'selected' : '' %>>Admin</option>
        <option value="0" <%= data.user.groupid == 2 ? 'selected' : '' %>>User</option>
</select>
  </div>

  <div class="mb-3 mt-3">
    <div class="form-check">
      <input type="radio" class="form-check-input" id="radio1" name="sex"
      value="1" <%= data.user.sex == 1 ? 'checked' : '' %> />Nam
      <label class="form-check-label" for="radio1"></label>
    </div>
    <div class="form-check">
      <input type="radio" class="form-check-input" id="radio2" name="sex" <%=
      data.user.sex == 0 ? 'checked' : '' %> value="0" />Nữ
      <label class="form-check-label" for="radio2"></label>
    </div>
  </div>
  <div class="d-grid">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
